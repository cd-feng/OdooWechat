<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_mdias_wechat_send_message_form" model="ir.ui.view">
        <field name="name">测试发送应用消息</field>
        <field name="model">mdias.wechat.send.message</field>
        <field name="arch" type="xml">
            <form>
                <group col="1">
                    <group>
                        <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="content"/>
                    </group>
                </group>
                <footer>
                    <button string="发送消息" name="on_send_message" type="object" class="oe_highlight"/>
                    <button string="取消" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="mdias_wechat_send_message_action" model="ir.actions.act_window">
        <field name="name">测试发送应用消息</field>
        <field name="res_model">mdias.wechat.send.message</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="发送消息" id="mdias_wechat_send_message_menu" parent="wechat_root_menu" sequence="5"
              action="mdias_wechat_send_message_action"/>

</odoo>